{
  "manifest_version": 3,
  "name": "Link Saver Pro",
  "version": "1.0",
  "description": "Save and sync links with serial numbers across devices",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "/popup.html",
    "default_icon": {
      "16": "/icons/icon.png",
      "32": "/icons/icon.png"
    }
  },
  "icons": {
    "16": "/icons/icon.png",
    "32": "/icons/icon.png",
    "48": "/icons/icon.png",
    "128": "/icons/icon.png"
  }
}
